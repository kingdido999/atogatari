{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "strict": 0,
    "semi": [ "off", "always" ],
    "quotes": [ "error", "single" ],
    "no-console": [ "off" ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "no-process-env": 0
  },
  "plugins": [
    "react"
  ]
}
